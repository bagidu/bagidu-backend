{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage-e2e",
  "collectCoverageFrom": [
    "**/src/**/*.controller.{js,ts}",
    "!**/src/**/*.spec.{js,ts}",
    "!**/src/**/*.test.{js,ts}",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageReporters": [
    "text",
    "html",
    "lcov",
    "clover"
  ]
}